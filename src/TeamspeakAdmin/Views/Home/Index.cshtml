@model TeamspeakWebAdmin.Models.ConnectModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Teamspeak 3 web admin" />
    <meta name="keywords" content="teamspeak,ts,3,ts3,web,admin,panel,query,free" />
    <title>Teamspeak Web Admin</title>
</head>
<body>
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="row">
            <h1>Teamspeak Web Admin</h1>
            <p>Teamspeak Web Admin lets you connect to and administrate your Teamspeak 3 Server through the web. Get started by connecting to your Teamspeak Query using the form below.</p>
            <form method="post" action="@Url.Action("Connect")" class="form-horizontal">
                <div class="input-group col-xs-12">
                    <input type="text" class="form-control" id="IP" name="IP" placeholder="Host" value="@Model.IP" />
                    <input type="text" class="form-control" id="Port" name="Port" placeholder="Port" value="@{if (Model.Error) { Write(Model.Port); } }" />
                    <input type="text" class="form-control" id="Username" name="Username" placeholder="Username" value="@Model.Username" />
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" value="@Model.Password" />
                </div>
                <div class="row">
                    <div class="btn-group col-xs-12">
                        <input type="submit" class="btn btn-success col-xs-6" value="Connect" />
                        <div id="clearBtn" class="btn btn-info col-xs-6">Clear</div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            @{ if (Model.Error)
                {
                    if (string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">Something went wrong...</div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
                    }
                }
            }
        </div>
    </div>
    <script type="text/javascript">
        $("#clearBtn").click(function () {
            $("#IP").val("");
            $("#Port").val("");
            $("#Username").val("");
            $("#Password").val("");
            $("#rememberMe").prop("checked", false);
        })
    </script>
</body>
</html>
